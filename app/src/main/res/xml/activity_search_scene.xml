<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/tiempoTotal"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rating"
            motion:layout_constraintTop_toTopOf="@+id/porciones" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/porciones"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/dificultad"
            android:id="@+id/tiempoPreparacion" />
        <Constraint
            android:id="@+id/dificultad"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/porciones"
            motion:layout_constraintVertical_bias="0.054"
            motion:layout_constraintTop_toBottomOf="@id/search"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/dificultad"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/porciones"
            motion:layout_constraintVertical_bias="0.054"
            motion:layout_constraintTop_toBottomOf="@+id/search"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/version"
            motion:layout_constraintTop_toBottomOf="@id/dificultad"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/porciones" />
        <Constraint
            android:id="@+id/search"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            motion:layout_constraintBottom_toTopOf="@id/dificultad"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp" />
        <Constraint
            android:id="@+id/tiempoTotal"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/results"
            motion:layout_constraintTop_toBottomOf="@id/porciones"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/tiempoTotal"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/results"
            motion:layout_constraintTop_toBottomOf="@id/porciones"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>